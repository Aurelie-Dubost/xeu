out = (lambda L: pd.concat(
    {k: d.set_axis(pd.MultiIndex.from_frame(d.columns.to_frame(index=False).reindex(columns=L, fill_value=pd.NA)), axis=1)
     for k, d in dfs.items()},
    axis=1, join="outer"
).rename_axis(columns=["source"] + L))(list(dict.fromkeys(n for d in dfs.values() for n in d.columns.names)))